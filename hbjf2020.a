red					= $02
blue				= $06
cyan				= $03
purple			= $04
green				= $05
yellow			= $07
orange			= $08
brown				= $09
pink				= $0A
dark_grey		= $0B
grey				= $0C
light_green	= $0D
light_blue	= $0E
light_grey	= $0F

; registers

!addr {

	.r1		= $fb  ; fb/fc  as 16-bits register 1
	.hi1	= $fb
	.lo1	= $fc

	; .r2		= $fd  ; fd/fe  as 16-bits register 2
	; .hi2	= $fd
	; .lo2	= $fe

	strlen = $02
	offset = $fd

	slowdown = $f7
	last_horscroll = $f8
	tmp1 = $f9
	tmp2 = $fa
	tmp3 = $fb
}

