	interrupt_control_register = $d01a
	interrupt_status_register = $d019
	default_interrupt_handler = $ea31
	final_interrupt_handler = $ea81
}

; 38 columns mode for horscroll

col40 = $08
col38 = $00

; line to scroll

scroll_line = $11

; colors

black				= $00
white				= $01
red					= $02
