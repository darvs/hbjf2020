	sprite_ptr_0_backbuffer = backbuffer + 1024 - 8 ; $33f8
	sprite_ptr_1_backbuffer = backbuffer + 1024 - 7 ; $33f9
	sprite_ptr_2_backbuffer = backbuffer + 1024 - 6 ; $33fa
	sprite_ptr_3_backbuffer = backbuffer + 1024 - 5 ; $33fb

	sprite_col_0 = $d027
	sprite_col_1 = $d028
	sprite_col_2 = $d029
